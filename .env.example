# NETAI Chatbot Environment Configuration
# Copy to .env and fill in your values

# ─── LLM Configuration ───────────────────────────────────────────────
# NRP LLM Service endpoint (OpenAI-compatible)
LLM_API_BASE_URL=https://llm.nrp-nautilus.io/v1
LLM_API_KEY=your-nrp-api-key-here

# Default model (options: qwen3-vl, glm-4.7, gpt-oss)
LLM_DEFAULT_MODEL=qwen3-vl
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ─── Application Settings ────────────────────────────────────────────
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false
APP_LOG_LEVEL=info

# ─── Network Diagnostics ─────────────────────────────────────────────
# perfSONAR service URL (if available)
PERFSONAR_URL=http://perfsonar.example.com
PERFSONAR_API_KEY=

# Enable mock data for demo/development
ENABLE_MOCK_DATA=true

# ─── Context & Memory ────────────────────────────────────────────────
MAX_CONVERSATION_HISTORY=50
CONTEXT_WINDOW_SIZE=10
